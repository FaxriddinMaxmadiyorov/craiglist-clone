<!DOCTYPE html>
<html>
  <head>
    <title>CraiglistClone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class='header'>
      <%= render 'layouts/breadcrumb_nav' %>
    </div>
    <p class="notice"><%= notice %></p>
    <div class="main">
      <div class="main-left">
        <p><strong><%= link_to 'Craiglist Clone', root_path %></strong></p>

        <%= link_to 'Create new post', new_post_path %>

        <%= link_to 'My Account', new_account_session_path unless account_signed_in? %>

        <%= render 'categories/category_sidebar' if controller.controller_name == 'categories' %>

        <% if is_home? %>
          <div class="nav-pages">
            <p><%= link_to 'help, faqs, abuse, legal', faqs_path %></p>
            <p><%= link_to 'avoid scams and frauds', scams_path %></p>
            <p><%= link_to 'personal safety tips', safety_path %></p>
            <p><%= link_to 'terms of use', terms_path %></p>
          <div>
        <% end %>

      </div>
      <div class="main-right"><div>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
